<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ServiceActivity">

    <TextView
        android:id="@+id/TvDatDoAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐẶT ĐỒ ĂN"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/selection"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvDatDoAn">
        <CheckBox
            android:id="@+id/DoUong1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Nước Khoáng Aquafina ( 8.000đ )"
            android:drawableStart="@drawable/baseline_water_drop_24"/>
        <CheckBox
            android:id="@+id/DoUong2"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Cocacola Chai ( 10.000đ )"
            android:drawableStart="@drawable/baseline_water_drop_24"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/DoUong3"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Trà Đào ( 15.000đ )"
            android:drawableStart="@drawable/baseline_water_drop_24"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/DoAn1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/food_ui"
            android:text="Combo Đồ Ăn ( 50.000đ )"
            android:drawableStart="@drawable/baseline_fastfood_24"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/info"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/food_ui"
        android:layout_marginTop="15dp"
        android:text="THÔNG TIN ĐẶT ĐỒ ĂN\n\n"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selection" />
    <TextView
        android:id="@+id/price_foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đơn giá: 0VND"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toLeftOf="@+id/btn_oder"
        app:layout_constraintBottom_toBottomOf="@+id/btn_oder"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/btn_oder"
        android:text="Đặt"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info"
        android:background="@drawable/shape_but"/>

</androidx.constraintlayout.widget.ConstraintLayout>